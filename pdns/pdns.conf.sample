# Testing configuration of PowerDNS, running on a non-privileged port
# and not as a daemon.

local-port=5300
local-address=0.0.0.0
daemon=no
socket-dir=.
launch=remote
remote-connection-string=http:url=http://localhost:4443/pdns,post=true,post_json=true
write-pid=no
log-dns-details=yes
log-dns-queries=yes
loglevel=5